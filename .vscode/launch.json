  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Static server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/static-server/src/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Publish server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/publish-server/src/index.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
